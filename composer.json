{
    "name": "kodenko/php-cryptocurrency-address-validation",
    "description": "Cryptocurrency address validation. Currently supports litecoin and bitcoin.",
    "authors": [
        {
            "name": "Andrey Murashkin",
            "email": "andrey@phpteam.pro"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-gmp": "*",
        "ext-bcmath": "*",
        "laravel/framework": ">=v7.0.0|>=v11.0.2||>=v12.0.2",
        "spomky-labs/cbor-php": "^3.1"
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
        ,
        "phpunit/phpunit": "~8.0"
    },
    "autoload": {
        "psr-4": {
            "Merkeleon\\PhpCryptocurrencyAddressValidation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
